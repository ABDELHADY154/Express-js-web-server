<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <a class="btn btn-primary" href="/pharmacy/category/create">create</a>
        </div>
        <div class="card-body text-center">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% category.forEach(function(category){ %>
                        <tr>

                            <th scope="row">
                                <%= category.id %>
                            </th>
                            <td>
                                <%= category.name %>
                            </td>

                            <td>
                                <%= category.description %>
                            </td>
                            <td>
                                <div>
                                    <a href="/pharmacy/category/show/<%= category.id %> " class="btn btn-success mr-3">
                                      Show
                                    </a>
                                    <a class="btn btn-info mr-3" href="/pharmacy/category/edit/<%= category.id %> ">update</a
                                    >
                                    <a
                                      class="btn btn-danger mr-3"
                                      href="/pharmacy/category/delete/<%= category.id %> "
                                      >delete</a
                                    >
                                  </div>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>