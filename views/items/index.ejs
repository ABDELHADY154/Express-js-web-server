<div class="container mt-5">
  <h1 class="text-center">Items</h1>
  <div class="card">
    <div class="card-header">
      <a class="btn btn-primary" href="/pharmacy/items/create">create</a>
    </div>
    <div class="card-body text-center">
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Quntitny</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(function(items){ %>
          <tr>
            <th scope="row"><%= items.id %></th>
            <td><%= items.item_name %></td>
            <td><%= items.item_price %></td>
            <td><%= items.item_quntitny %></td>
            <td>
              <div>
                <a
                  href="/pharmacy/items/show/<%= items.id %> "
                  class="btn btn-success mr-3"
                >
                  Show
                </a>
                <a
                  class="btn btn-info mr-3"
                  href="/pharmacy/items/edit/<%= items.id %> "
                  >update</a
                >
                <a
                  class="btn btn-danger mr-3"
                  href="/pharmacy/items/delete/<%= items.id %> "
                  >delete</a
                >
              </div>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
