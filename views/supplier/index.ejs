<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <a class="btn btn-primary" href="/pharmacy/suppliers/create">create</a>
    </div>
    <div class="card-body text-center">
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% suppliers.forEach(function(suppliers){ %>
          <tr>
            <th scope="row"><%= suppliers.id %></th>
            <td><%= suppliers.full_name %></td>
            <td><%= suppliers.email %></td>
            <td><%= suppliers.phone_num %></td>
            <td>
              <div>
                <a
                  href="/pharmacy/suppliers/show/<%= suppliers.id %> "
                  class="btn btn-success mr-3"
                >
                  Show
                </a>
                <a
                  class="btn btn-info mr-3"
                  href="/pharmacy/suppliers/edit/<%= suppliers.id %> "
                  >update</a
                >
                <a
                  class="btn btn-danger mr-3"
                  href="/pharmacy/suppliers/delete/<%= suppliers.id %> "
                  >delete</a
                >
              </div>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
