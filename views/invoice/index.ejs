<div class="container mt-5">
  <h1 class="text-center">Invoices</h1>
  <div class="card">
    <div class="card-header">
      <a class="btn btn-primary" href="/pharmacy/invoices/create">create</a>
    </div>
    <div class="card-body text-center">
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Total</th>
            <th scope="col">Customer</th>
            <th scope="col">Supplier</th>

            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% invoices.forEach(function(invoices){ %>
          <tr>
            <th scope="row"><%= invoices.id %></th>
            <td><%= invoices.total_price %> $</td>
            <td>
              <a href="/pharmacy/customers/show/<%= invoices.customer_id %> "
                ><%= invoices.customer_id %></a
              >
            </td>
            <td>
              <a href="/pharmacy/suppliers/show/<%= invoices.supplier_id %> "
                ><%= invoices.supplier_id %></a
              >
            </td>
            <td>
              <div>
                <a
                  href="/pharmacy/invoices/show/<%= invoices.id %> "
                  class="btn btn-success mr-3"
                >
                  Show
                </a>
                <a
                  class="btn btn-info mr-3"
                  href="/pharmacy/invoices/edit/<%= invoices.id %> "
                  >update</a
                >
                <a
                  class="btn btn-danger mr-3"
                  href="/pharmacy/invoices/delete/<%= invoices.id %> "
                  >delete</a
                >
              </div>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
